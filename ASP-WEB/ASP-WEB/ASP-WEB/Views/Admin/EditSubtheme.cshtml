<form enctype="multipart/form-data" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" value="@Model.subtheme.SubthemeID" name="SubthemeID"/>

    <label for="Name">Name</label>
    <input type="text" value="@Model.subtheme.Name"  name="Name" />

    <label for="Description">Description</label>
    <input type="text" name="Description" value="@Model.subtheme.Description" />

    <select name="ThemeID">
        @foreach (var item in Model.themes)
        {

            <option value="@item.ThemeID">@item.Name</option>
        }
    </select>

    <select multiple name="OfficeIDs">
        @foreach (var item in Model.offices)
        {

            <option value="@item.OfficeID">@item.Name</option>
        }
    </select>

    <label for="file">Kies een foto</label>
    <input type="file" name="file" />


    <input type="submit" name="submit" value="Submit" />
</form>
