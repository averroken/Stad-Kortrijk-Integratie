<form action="" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" value="@Model.faqEen.FaqID" name="FaqID" />

    <select name="SubthemeID">
        @foreach (var item in Model.Subtheme)
        {
            <option value="@item.SubthemeID">@item.Name</option>
        }
    </select>
    <select name="ThemeID">
        @foreach (var item in Model.Theme)
        {
            <option value="@item.ThemeID">@item.Name</option>
        }
    </select>

    <label for="Question">Vraag: </label>
    <input type="text" name="Question" value="@Model.faqEen.Question"/>

    <label for="Answer">Antwoord: </label>
    <input type="text" name="Answer" value="@Model.faqEen.Answer"/>

    <input type="submit" value="Create" class="btn btn-default" />
</form>
