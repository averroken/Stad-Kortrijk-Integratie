@model ASP_WEB.Models.Faq

@{
    ViewBag.Title = "DetailsFaq";
}

<h2>DetailsFaq</h2>

<div>
    <h4>Faq</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Theme)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Theme.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Subtheme)
        </dt>

        <dd>
            @WebUtility.HtmlDecode(Model.Subtheme.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Question)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Question)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Answer)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Answer)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "EditFaq", new { id = Model.FaqID }) |
